<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="6.0" prefWidth="52.0" text="Поиск" GridPane.columnIndex="1" GridPane.rowSpan="2"/>
      <TextField fx:id="firstIdTextField" text="Введите id" />
      <TextField fx:id="secondIdTextField" text="Введите id" GridPane.rowIndex="1" />
      <TableView fx:id="friendsTableView" prefHeight="200.0" prefWidth="225.0" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <columns>
          <TableColumn prefWidth="75.0" text="Ф.И.О." />
          <TableColumn prefWidth="75.0" text="Пол" />
        </columns>
      </TableView>
   </children>
</GridPane>
